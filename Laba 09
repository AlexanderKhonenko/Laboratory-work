#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <math.h>

void Laba_1(int b, double z1, double z2) {
	z1 = (sqrt(2 * b + 2 * sqrt(b*b - 4)))/((sqrt(b*b-4))+b+2);
	z2 = 1/sqrt(b+2);
	printf("z1(%d)=%f\n", b, z1);
	printf("z2(%d)=%f\n", b, z2);
	scanf("%d", &b);
	}

int main() {
	Laba_1(4,1.5,7.2);
}

////////// 2
#include "pch.h"
#include <iostream>

using namespace std;
void Laba_2(double x, double y, double r) {
	setlocale(LC_ALL, "Russian");
	if ((y <= 0 && x >= 0 && x*x + y * y <= r * r) || y >= 0 && x <= 0 && (x + r)*(x + r) + (y - r)*(y - r) >= r * r)
		cout << "Точка попадает в область" << endl;
	else cout << "Точка не попадает в область" << endl;
}

int main() {
	Laba_2(-1, 1, 5);
}

///////////////////// 3

#include "pch.h"
#include <clocale>
#include <iostream>
#include <iomanip>
#include <cmath>
using namespace std;

void Laba_3 ( double xstart, double xend, double dx, double y = 0) {
	setlocale(LC_ALL, "Russian");
	cout << "|\t" <<"x"<<"\t|\t"<<"y"<<"\t"<< endl;
	for (double i = xstart; i <= xend; i += dx)
	{
		if (i < -7 || i>3){
			cout <<"|\t"<< i << "\t|\t"<<"Функция неопределена" << endl;
		}
		else if (i <= -6) y = 1;
		else if (i <= -4) y = -((4 + i) / 2);
		else if (i < 0) y = sqrt(4 - (i + 2)*(i + 2));
		else if (i < 2) y = -(sqrt(1 - (i - 1)*(i - 1)));
		else if (i <= 3) y = -i + 2;
		if (i>=-7 && i<=3)
			cout << "|\t" << i << "\t|\t" << y <<"\t"<< endl;
	}
	
}
int main() {
	Laba_3(1,2,0.5);
}

